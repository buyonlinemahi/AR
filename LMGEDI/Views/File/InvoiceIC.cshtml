                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-default padding-btn color-black pull-right margin-btm-30" type="submit" id="btnUpdateICAmount" data-bind="click:$root.UpdateICAmountInvoice">Save</button>
            </div>
        </div>
</div>
