<script>
    function searchFile() {
        if ($('#txtsearchFile').val() != "") {
            window.location = "/File/FileLanding?searchFile=" + $('#txtsearchFile').val();
        }
        else {
            return false;
        }
    }
    $('#divDashboardSearch').keypress(function (e) {
        if (e.keyCode == '13') {
            $(this).find('#btnDashboardSearch').click();
        }
    });
</script>