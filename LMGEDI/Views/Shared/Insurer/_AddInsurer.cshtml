
@using System.Web.Script.Serialization
@using LMGEDIApp.Infrastructure.Global;

@{
    ViewBag.Title = "__AddInsurer";

}

<!--start row -->
<div id="divInsurerAddPartial">
   @using (Html.BeginForm(GlobalConst.Actions.FileController.AddInsurer, GlobalConst.Controllers.File, System.Web.Mvc.FormMethod.Post, new
{
    id = "frmAddInsurer",
    enctype = "multipart/form-data",
    data_bind = "ajaxForm : { success : function(responseText ,statusText,xhr,$form){AddInsurerName(responseText);},beforeSubmit : InsurerInfoFormBeforeSubmit}"
}))
    {
        <div class="panel-wrapper">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Add Insurer </div>
                <div class="panel-body">
                    <div class="col-md-2"><label> Name :</label></div>
                    <div class="col-md-10">
                        <div class="form-group col-md-10">
                            <input autocomplete="off" type="text" name="InsurerName" maxlength="50" id="AddInsurerName" class="form-control" data-bind="jqBootstrapValidation: {}" placeholder="Insurer Name" required="required">
                        </div>
                        <button class="btn btn-default padding-btn color-black pull-right margin-btm-30" type="submit" >Save</button>
                    </div>
                </div>
                
            </div>
        </div>
   }
    <!-- row-end -->
</div><!-- /inner-wrapper -->
