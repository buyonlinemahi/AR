@using System.Web.Script.Serialization
@using LMGEDIApp.Infrastructure.Global;

@{
    ViewBag.Title = "__AdjusterSearch";

}
<!--start row -->
<div id="divAdjusterSearchPartial">
    <form>
        <div class="panel-wrapper">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Search Adjuster </div>
                <div class="panel-body">
                    <div class="col-md-2"><label> Name:</label> </div>
                    <div class="col-md-10">
                        <div class="form-group col-md-10">
                            <input type="text" name="searchText" maxlength="50" id="SearchAdjusterTitle" class="form-control" data-bind="jqBootstrapValidation: {}" placeholder="Search Adjuster" required="required">
                        </div>
                        <button class="btn btn-default text-right col-md-2" id="SearchAdjuster" data-bind="click:$root.SearchAdjusterByName" type="submit">Search </button>
                    </div>
                </div>
                <!--ko with:FileViewModel-->
                <input type="hidden" name="Take" id="hidtake" data-bind="value: $root.Take" />
                <input type="hidden" name="Skip" id="hidskip" data-bind="value: $root.Skip" />                
                <!--/ko-->

                
                <div class="row">
                    <div>
                        <div class="col-sm-12">
                            <div class="col-sm-12">
                                <div class="white-background">

                                    <table class="table table-bordered table-striped table-condensed home-table">
                                        <thead>
                                            <tr>
                                                <th class="col-sm-3">Adjuster Name</th>
                                                <th class="col-sm-3">Adjuster Phone</th>
                                                <th class="col-sm-2">Adjuster Fax </th>
                                                <th class="col-sm-3">Adjuster Email </th>
                                                <th class="col-sm-1">Action </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!--ko if:AdjustersArrResult!= null-->
                                            <!-- ko foreach:AdjustersArrResult -->
                                            <tr>
                                                <td class="col-sm-3">
                                                    <span data-bind="text:AdjusterFirstName()+' '+AdjusterLastName()" />
                                                    <input type="hidden" name="AdjusterId" id="AdjusterId" data-bind="value:AdjusterId()" />
                                                    <input type="hidden" name="AdjusterFirstName" id="AdjusterFirstName" data-bind="value:AdjusterFirstName()" />
                                                    <input type="hidden" name="AdjusterLastName" id="AdjusterLastName" data-bind="value:AdjusterLastName()" />
                                                </td>
                                                <td class="col-sm-3"><span data-bind="text :AdjusterPhone()" /></td>
                                                <td class="col-sm-2"><span data-bind="text :AdjusterFax()" /></td>
                                                <td class="col-sm-3"><span data-bind="text :AdjusterEmail()" /></td>
                                                <td class="col-md-1"><a href="#" class="inner-content-link right_blue  text-deco" data-bind="click:$root.SelectAdjusterName" >Select</a></td>
                                            </tr>
                                            <!--/ko-->
                                            <!--/ko-->

                                        </tbody>
                                        <tfoot>
                                            <!--ko if:(AdjustersArrResult().length== 0)-->
                                            <tr>
                                                <td colspan="5">
                                                    <div class="alert alert-info">
                                                        <button type="button" class="close" data-dismiss="alert">
                                                            &times;
                                                        </button>
                                                        No Result Found.
                                                    </div>
                                                </td>
                                            </tr>
                                            <!-- /ko -->
                                        </tfoot>
                                    </table>
                                    <nav class="margin-left">
                                        @Html.Partial("~/Views/Shared/_Paging.cshtml")
                                    </nav>
                                </div><!-- white-background -->
                            </div><!-- col-sm-12 -->
                        </div>


                    </div>

                </div>
                
            </div>
        </div>
    </form>
    <!-- row-end -->
</div><!-- /inner-wrapper -->